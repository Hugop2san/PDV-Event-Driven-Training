@page "/pedidos/criar"
@inject Application.Pedidos.PedidoService Service

<h3 class="mb-3">Criar pedido</h3>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">Cliente</label>
            <input class="form-control" @bind="_cliente" />
        </div>

        <div class="row g-2">
            <div class="col-md-5">
                <input class="form-control" placeholder="Produto" @bind="_nome" />
            </div>
            <div class="col-md-2">
                <input class="form-control" type="number" placeholder="Qtd" @bind="_qtd" />
            </div>
            <div class="col-md-3">
                <input class="form-control" type="number" step="0.01" placeholder="Preço" @bind="_preco" />
            </div>
            <div class="col-md-2 d-grid">
                <button class="btn btn-outline-primary" @onclick="AddItem">Adicionar</button>
            </div>
        </div>

        <hr />

        @if (_itens.Count == 0)
        {
            <div class="text-muted">Nenhum item adicionado.</div>
        }
        else
        {
            <ul class="list-group mb-3">
                @foreach (var i in _itens)
                {
                    <li class="list-group-item d-flex justify-content-between">
                        <span>@i.nome • x@i.qtd</span>
                        <span class="text-muted">@((i.qtd * i.preco).ToString("C"))</span>
                    </li>
                }
            </ul>

            <div class="d-grid">
                <button class="btn btn-success" @onclick="Criar">Finalizar e publicar evento</button>
            </div>

            @if (!string.IsNullOrWhiteSpace(_msg))
            {
                <div class="alert alert-success mt-3 mb-0">@_msg</div>
            }
        }
    </div>
</div>

@code {
    string _cliente = "Cliente Teste";
    string _nome = "Coca 2L";
    int _qtd = 1;
    decimal _preco = 10;

    string _msg = "";
    List<(string nome, int qtd, decimal preco)> _itens = new();

    void AddItem()
    {
        if (string.IsNullOrWhiteSpace(_nome) || _qtd <= 0 || _preco <= 0) return;
        _itens.Add((_nome.Trim(), _qtd, _preco));
        _nome = ""; _qtd = 1; _preco = 0;
    }

    async Task Criar()
    {
        var id = await Service.CriarPedidoAsync(_cliente, _itens);
        _msg = $"Pedido criado: {id.ToString()[..8]} (handlers executados)";
        _itens.Clear();
    }
}
